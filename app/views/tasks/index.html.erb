<div class="container">
  <h3 class="text-center mt-3">
    All tasks
  </h3>
  <div class="row justify-content-center">
    <% @tasks.each do |task| %>
     <div class="card col-4 my-2 card_category">
        <div class="card-body" data-turbo="false">
          <h5 class="card-title"><%= link_to task.title, task_path(task)  %></h5>
        </div>
      </div>
    <% end %>
  </div>
</div>
